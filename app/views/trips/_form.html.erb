<div class="row">
   <div class="span6 offset3">
     <%= form_for(@trip) do |f| %>
       <% if @trip.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

            <ul>
            <% @trip.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
       <% end %>

       <%= f.label :code %><br />
       <%= f.number_field :code %>
       
       <%= f.label :tour_name %><br />
