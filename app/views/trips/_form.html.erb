       <%= f.date_select :end_date %>

       <%= f.label :organizer %><br />
       <%= f.text_field :organizer %>

       <%= f.label :destination %><br />
       <%= f.text_field :destination %>

       <%= f.label :trip_type %><br />
       <%= f.text_field :trip_type %>

       <%= f.label :trip_status %><br />
       <%= f.text_field :trip_status %>
       
       <%= f.submit "Create Trip", class: "btn btn-large btn-primary" %>
     <% end %>
  </div>
</div>
